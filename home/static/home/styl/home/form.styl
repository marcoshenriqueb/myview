formcolor = rgb(238, 238, 238)

input, textarea
    border 1px solid formcolor
    color lightgraycolor
    font-size 14px
    font-weight 300
    line-height 26px
    outline lightgraycolor
    padding 9px
    text-align start
    text-indent 18px
    transition 300ms all linear
    margin-bottom 1rem
    letter-spacing 1px
    font-family: 'Raleway', sans-serif
    &:focus
        border-color secondarycolor

input
    height 46px
.button, .o-button-reverse, .o-button    
    font-family: 'Montserrat', sans-serif

.button, .icon-button, .o-button-reverse, .o-button, .o-icon-button, .button-contact-send
    color white
    letter-spacing 1px
    font-size 13px
    text-decoration none
    cursor pointer
    text-transform uppercase
    transition 600ms all ease-out

.button
    padding 15px 28px
    border-radius 30px
    background-color secondarycolor
    border 1px solid secondarycolor
    &.audiovisual
        background-color rgba(0, 0, 0, 0)
        border 2px solid audiovisualcolor
        color audiovisualcolor
        &:hover, &:active, &:focus
            background-color audiovisualcolor
            border-color audiovisualcolor
    &.enterprise
        background-color rgba(0, 0, 0, 0)
        border 2px solid enterprisecolor
        color enterprisecolor
        &:hover, &:active, &:focus
            background-color enterprisecolor
            border-color enterprisecolor
    &.solutions
        background-color rgba(0, 0, 0, 0)
        border 2px solid solutionscolor
        color solutionscolor
        &:hover, &:active, &:focus
            background-color solutionscolor
            border-color solutionscolor
    &.academy
        background-color rgba(0, 0, 0, 0)
        border 2px solid academycolor
        color academycolor
        &:hover, &:active, &:focus
            background-color academycolor
            border-color academycolor
    &:hover, &:active, &:focus
        background-color: darkcolor
        border-color darkcolor
        color white

.button-contact-send
    padding 15px 28px
    border-radius 30px
    &.audiovisual
        background-color audiovisualcolor
        border 1px solid audiovisualcolor
    &.enterprise
        background-color enterprisecolor
        border 1px solid enterprisecolor
    &.solutions
        background-color solutionscolor
        border 1px solid solutionscolor
    &.academy
        background-color academycolor
        border 1px solid academycolor
    &:hover, &:active, &:focus
        background-color darkcolor
        border-color darkcolor
        color white

.o-button
    font-family: 'Raleway', sans-serif
    text-transform capitalize
    padding 0 15px
    line-height 36px
    border-radius 30px
    color darkcolor
    border 2px solid transparent
    &:hover, &:active, &:focus
        border-color darkcolor

.o-button-reverse
    padding 15px 28px
    border-radius 30px
    color white
    border 2px solid white
    &:hover, &:active, &:focus
        color secondarycolor
        border-color secondarycolor
    &.audiovisual
        &:hover, &:active, &:focus
            color audiovisualcolor
            border-color audiovisualcolor
    &.enterprise
        &:hover, &:active, &:focus
            color enterprisecolor
            border-color enterprisecolor
    &.solutions
        &:hover, &:active, &:focus
            color solutionscolor
            border-color solutionscolor
    &.academy
        &:hover, &:active, &:focus
            color academycolor
            border-color academycolor
    

.icon-button, .o-icon-button
    border-radius 25px
    height 50px
    width 50px
    display flex
    align-items center
    justify-content center
    font-size 15px
    
.icon-button
    background-color darkcolor
    border 1px solid darkcolor
    &:hover, &:active, &:focus
        background-color: secondarycolor
        border-color secondarycolor
    &.audiovisual
        &:hover, &:active, &:focus
            background-color audiovisualcolor
            border-color audiovisualcolor
    &.enterprise
        &:hover, &:active, &:focus
            background-color enterprisecolor
            border-color enterprisecolor
    &.solutions
        &:hover, &:active, &:focus
            background-color solutionscolor
            border-color solutionscolor
    &.academy
        &:hover, &:active, &:focus
            background-color academycolor
            border-color academycolor

.o-icon-button
    color white
    background-color transparent
    border 2px solid white
    &:hover, &:active, &:focus
        color secondarycolor
        border-color secondarycolor
    &.audiovisual
        &:hover, &:active, &:focus
            color audiovisualcolor
            border-color audiovisualcolor
    &.enterprise
        &:hover, &:active, &:focus
            color enterprisecolor
            border-color enterprisecolor
    &.solutions
        &:hover, &:active, &:focus
            color solutionscolor
            border-color solutionscolor
    &.academy
        &:hover, &:active, &:focus
            color academycolor
            border-color academycolor

.button-square
    font-family: 'Montserrat', sans-serif
    color: secondarycolor
    background-color rgba(0, 0, 0, .0)
    border: 2px solid secondarycolor
    text-decoration: none
    font-size: 12px
    line-height: 13px
    letter-spacing: 1px
    padding 10.5px 19.6px
    transition 600ms all ease-out

    &:hover, &:active, &:focus
        background-color: secondarycolor
        color: white
