.header
    top 100px
    margin-top -100px
    z-index 200
    position absolute
    width: 100%
    height: 100px
    background-color: white
    overflow: hidden
    transition: height 300ms ease, margin-top 300ms ease
    &.affix
        top 0
        margin-top 0
        position fixed
        box-shadow: 0 4px 2px -4px rgba(0, 0, 0, .75);
    &.active
        height: 294px

    a
        font-family: 'Montserrat', sans-serif
        color: darkgraycolor
        letter-spacing: 1px
        text-decoration: none
        transition all 400ms ease
        &:hover, &:focus, &:active
            color: secondarycolor
            &.home
                color darkgraycolor
            &.audiovisual
                color audiovisualcolor
            &.enterprise
                color enterprisecolor
            &.solutions
                color solutionscolor
            &.academy
                color academycolor

.header-content
    justify-content: space-between
    padding-right: 20px
    height: 100px
    width: 100%

.header-logo
    img
        height: 80px

.header-nav
    &>.fa
        font-size: 24px
        cursor: pointer

.header-nav_mobile-items
    width: 100%
    list-style: none
    padding-left: 0
    margin-top: 0
    a
        font-size: 14px
        padding: 10px 0
        letter-spacing: 0.6px

.header-nav_items
    display: none
    a
        line-height: 100px
        font-size: 12px
        padding: 0 19px
        text-transform: uppercase

@media(min-width: 768px)
    .header
        &.active
            height: 100px
    .header-nav_mobile-items
        display: none

    #mobile-menu
        display: none

    .header-nav_items
        display: flex
        list-style: none