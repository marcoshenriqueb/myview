special-margin = 8%

.services-page-list
    padding 4rem 2.5rem 0 2.5rem
    flex-wrap wrap

.service-page-item
    width 100%
    margin-bottom 5rem

.service-page-item_content
    margin-left 2rem
    ul
        list-style none
        padding-left 0

.special-service
    margin 2rem 0rem
    flex-wrap wrap
    padding 0

.special-service_img
    position relative
    width 100%
    overflow hidden
    margin-bottom 1rem
    img
        width 100%
        height auto

.special-service_overlay
    height 100%
    width 100%
    z-index 100
    position absolute
    top 0
    left 0
    background-color secondarycolor
    opacity 0.1

.special-service_content
    ul
        list-style none
        padding-left 0
        margin 0

.special-service_content
    width 100%
    padding 0 1rem

@media(min-width 768px)
    .services-page-list
        padding 6rem 4rem 0 4rem

    .service-page-item
        width 50%

    .special-service
        margin 2rem 0
        padding 0 4rem
        justify-content space-between
        &:first-child
            margin-top 4rem
        &:last-child
            margin-bottom 4rem
        &:nth-child(2n)
            .special-service_img
                order 2
            .special-service_content
                order 1

    .special-service_img
        margin-bottom 0
        width 55%
    .special-service_content
        width 40%
        padding-bottom 0
